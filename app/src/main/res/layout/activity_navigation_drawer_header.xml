<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/navigation_drawer_background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/navigation_drawer_user_image_default"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mounil Shah"
            android:textColor="#fff"
            android:textSize="30sp"
            android:id="@+id/navBarUserNameTV"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="qwerty@gmail.com"
            android:textColor="#fff"
            android:textSize="16sp"
            android:id="@+id/navBarUserEmailTV"/>

    </LinearLayout>

</RelativeLayout>